<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fahchouch.client.controllers.chat.ChatPageController"
            style="-fx-background-color: #1e1e2f;">

    <top>
        <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #2e2e4a;">
            <Label fx:id="chatTitleLabel" text="Chat" 
                   style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
            <Label fx:id="statusLabel" text="En ligne" 
                   style="-fx-text-fill: #43a047; -fx-font-size: 14;" />
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 20;">
            <Label text="Room opened! (No messages yet)" 
                   style="-fx-text-fill: #888; -fx-font-size: 16;" />
        </VBox>
    </center>

</BorderPane>