<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fahchouch.client.controllers.chat.ChatPageController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: #1e1e2f;">

    <!-- Top: Chat Recipient -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Label fx:id="recipientLabel" text="Chat avec ..." 
                   style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;">
                <font>
                    <Font name="Roboto" size="18"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Center: Chat Messages -->
    <center>
        <ListView fx:id="messagesListView" style="-fx-background-color: #2c2c3a; -fx-text-fill: white; -fx-font-size: 14;" />
    </center>

    <!-- Bottom: Message Input -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="messageField" promptText="Tapez votre message..."
                       style="-fx-background-radius: 5; -fx-font-size: 14;" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" text="Envoyer" 
                    style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5;"/>
        </HBox>
    </bottom>

</BorderPane>
