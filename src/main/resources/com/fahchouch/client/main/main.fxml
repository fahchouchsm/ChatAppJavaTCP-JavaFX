<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: #1e1e2f;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fahchouch.client.controllers.main.MainPageController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10;">
            <Label text="Lobby de Chat"
                   style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;">
                <font>
                    <Font name="Roboto" size="20.0" />
                </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label text="Chercher un utilisateur :" textFill="WHITE">
                <font>
                    <Font name="Roboto" size="12.0" />
                </font>
            </Label>
            
            <TextField fx:id="searchField" maxWidth="250" promptText="Rechercher..." 
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-font-size: 14;" />
            
            <Button fx:id="searchButton" text="Chercher"
                    style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-background-radius: 8;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">
            
            <Button fx:id="publicRoomButton" text="Rejoindre le salon public"
                    style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10;" />
            <ListView fx:id="usersListView" prefHeight="400" style="-fx-background-radius: 8; -fx-font-size: 14;"
                      visible="false" managed="false"/>
        </VBox>
    </center>

</BorderPane>
