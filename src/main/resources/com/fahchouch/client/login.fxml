<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="550.0" style="-fx-background-color: #1e1e2f;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fahchouch.client.login.LoginController">
   
    <top>
        <Label prefHeight="98.0" prefWidth="163.0" style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold; -fx-padding: 30 0 20 0;" text="Chat Client" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="Roboto" size="16.0" />
         </font></Label>
    </top>
   
    <center>
        <VBox alignment="CENTER" spacing="15">
           
            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Nom d'utilisateur:" />
           
            <TextField fx:id="usernameField" maxWidth="250.0" promptText="Entrez votre nom d'utilisateur" style="-fx-background-radius: 8; -fx-padding: 8; -fx-font-size: 14;" />
           
            <Button fx:id="connectButton" onAction="#handleConnect" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10;" text="Se connecter" />

        </VBox>
    </center>

</BorderPane>
